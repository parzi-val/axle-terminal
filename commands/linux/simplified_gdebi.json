{
  "command": "gdebi",
  "description": "Easily install .deb files. More information: https://www.commandlinux.com/man-page/man1/gdebi.1.html.",
  "useCases": [
    {
      "description": "Install local .deb packages resolving and installing its dependencies:",
      "syntax": "gdebi {{path/to/package.deb}}"
    },
    {
      "description": "Do not show progress information:",
      "syntax": "gdebi {{path/to/package.deb}} --quiet"
    },
    {
      "description": "Set an APT configuration option:",
      "syntax": "gdebi {{path/to/package.deb}} --option={{APT_OPTS}}"
    },
    {
      "description": "Use alternative root dir:",
      "syntax": "gdebi {{path/to/package.deb}} --root={{path/to/root_dir}}"
    },
    {
      "description": "Display version:",
      "syntax": "gdebi --version"
    }
  ]
}