{
  "command": "autorandr",
  "description": "Automatically change screen layout. More information: https://github.com/phillipberndt/autorandr.",
  "useCases": [
    {
      "description": "Save the current screen layout:",
      "syntax": "autorandr --save {{profile_name}}"
    },
    {
      "description": "Show the saved profiles:",
      "syntax": "autorandr"
    },
    {
      "description": "Load the first detected profile:",
      "syntax": "autorandr --change"
    },
    {
      "description": "Load a specific profile:",
      "syntax": "autorandr --load {{profile_name}}"
    },
    {
      "description": "Set the default profile:",
      "syntax": "autorandr --default {{profile_name}}"
    }
  ]
}