{
  "command": "shutdown",
  "description": "Shutdown and reboot the system. More information: https://manned.org/shutdown.8.",
  "useCases": [
    {
      "description": "Power off ([h]alt) immediately:",
      "syntax": "shutdown -h now"
    },
    {
      "description": "[r]eboot immediately:",
      "syntax": "shutdown -r now"
    },
    {
      "description": "[r]eboot in 5 minutes:",
      "syntax": "shutdown -r +{{5}} &amp;"
    },
    {
      "description": "Shutdown at 1:00 pm (Uses 24[h] clock):",
      "syntax": "shutdown -h 13:00"
    },
    {
      "description": "[c]ancel a pending shutdown/reboot operation:",
      "syntax": "shutdown -c"
    }
  ]
}