{
  "command": "xwinwrap",
  "description": "Run a player or a program as desktop background. More information: https://github.com/ujjwal96/xwinwrap.",
  "useCases": [
    {
      "description": "Run a video using mpv:",
      "syntax": "xwinwrap -b -nf -ov -- {{mpv}} -wid {{wid}} --loop --no-audio --no-resume-playback --panscan={{1.0}} {{path/to/video.mp4}}"
    },
    {
      "description": "Run a video in fullscreen using mpv:",
      "syntax": "xwinwrap -b -nf -fs -ov -- {{mpv}} -wid {{wid}} --loop --no-audio --no-resume-playback --panscan={{1.0}} {{path/to/video.mp4}}"
    },
    {
      "description": "Run a video using mpv with 80% opacity:",
      "syntax": "xwinwrap -b -nf -ov -o 0.8 --- {{mpv}} -wid {{wid}} --loop --no-audio --no-resume-playback --panscan={{1.0}} {{path/to/video.mp4}}"
    },
    {
      "description": "Run a video using mpv in a second monitor 1600x900 with 1920 offset on X-axis:",
      "syntax": "xwinwrap -g 1600x900+1920 -b -nf -ov -- {{mpv}} -wid {{wid}} --loop --no-audio --no-resume-playback --panscan={{1.0}} {{path/to/video.mkv}}"
    }
  ]
}