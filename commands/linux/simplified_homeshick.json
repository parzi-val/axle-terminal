{
  "command": "homeshick",
  "description": "Synchronize Git dotfiles. See also: chezmoi, stow, tuckr, vcsh. More information: https://github.com/andsens/homeshick/wiki.",
  "useCases": [
    {
      "description": "Create a new castle:",
      "syntax": "homeshick generate {{castle_name}}"
    },
    {
      "description": "Add a file to your castle:",
      "syntax": "homeshick track {{castle_name}} {{path/to/file}}"
    },
    {
      "description": "Go to a castle:",
      "syntax": "homeshick cd {{castle_name}}"
    },
    {
      "description": "Clone a castle:",
      "syntax": "homeshick clone {{github_username}}/{{repository_name}}"
    },
    {
      "description": "Symlink all files from a castle:",
      "syntax": "homeshick link {{castle_name}}"
    }
  ]
}