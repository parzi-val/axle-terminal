{
  "command": "playerctl",
  "description": "Control media players via MPRIS. More information: https://github.com/altdesktop/playerctl.",
  "useCases": [
    {
      "description": "Toggle play:",
      "syntax": "playerctl play-pause"
    },
    {
      "description": "Skip to the next track:",
      "syntax": "playerctl next"
    },
    {
      "description": "Go back to the previous track:",
      "syntax": "playerctl previous"
    },
    {
      "description": "List all players:",
      "syntax": "playerctl --list-all"
    },
    {
      "description": "Send a command to a specific player:",
      "syntax": "playerctl --player {{player_name}} {{play-pause|next|previous|...}}"
    },
    {
      "description": "Send a command to all players:",
      "syntax": "playerctl --all-players {{play-pause|next|previous|...}}"
    },
    {
      "description": "Display metadata about the current track:",
      "syntax": "playerctl metadata --format &quot;{{Now playing: \\{\\{artist\\}\\} - \\{\\{album\\}\\} - \\{\\{title\\}\\}}}&quot;"
    }
  ]
}