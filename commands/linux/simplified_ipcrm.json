{
  "command": "ipcrm",
  "description": "Delete IPC (Inter-process Communication) resources. More information: https://manned.org/ipcrm.",
  "useCases": [
    {
      "description": "Delete a shared memory segment by ID:",
      "syntax": "ipcrm --shmem-id {{shmem_id}}"
    },
    {
      "description": "Delete a shared memory segment by key:",
      "syntax": "ipcrm --shmem-key {{shmem_key}}"
    },
    {
      "description": "Delete an IPC queue by ID:",
      "syntax": "ipcrm --queue-id {{ipc_queue_id}}"
    },
    {
      "description": "Delete an IPC queue by key:",
      "syntax": "ipcrm --queue-key {{ipc_queue_key}}"
    },
    {
      "description": "Delete a semaphore by ID:",
      "syntax": "ipcrm --semaphore-id {{semaphore_id}}"
    },
    {
      "description": "Delete a semaphore by key:",
      "syntax": "ipcrm --semaphore-key {{semaphore_key}}"
    },
    {
      "description": "Delete all IPC resources:",
      "syntax": "ipcrm --all"
    }
  ]
}