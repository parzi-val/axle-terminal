{
  "command": "pulumi env",
  "description": "Manage Pulumi environments. More information: https://www.pulumi.com/docs/iac/cli/commands/pulumi_env/.",
  "useCases": [
    {
      "description": "List all environments:",
      "syntax": "pulumi env ls"
    },
    {
      "description": "Create an environment:",
      "syntax": "pulumi env init {{environment_name}}"
    },
    {
      "description": "Set a value in an environment:",
      "syntax": "pulumi env set {{environment_name}} {{key}} {{value}}"
    },
    {
      "description": "Edit an environment definition:",
      "syntax": "pulumi env edit {{environment_name}}"
    },
    {
      "description": "Delete a value from an environment:",
      "syntax": "pulumi env rm {{environment_name}} {{key}}"
    },
    {
      "description": "Delete an environment entirely:",
      "syntax": "pulumi env rm {{environment_name}}"
    },
    {
      "description": "Display help:",
      "syntax": "pulumi env --help"
    }
  ]
}