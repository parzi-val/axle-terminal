{
  "command": "Curly brace",
  "description": "Multipurpose shell syntax. More information: https://www.gnu.org/software/bash/manual/bash.html.",
  "useCases": [
    {
      "description": "Isolate variable names:",
      "syntax": "echo ${HOME}work"
    },
    {
      "description": "Brace expand sequences:",
      "syntax": "echo {1..3} {a..c}{dir1,dir2,dir3}"
    },
    {
      "description": "Check if variable is set before returning text:",
      "syntax": "echo ${variable:+variable is set and contains $variable}"
    },
    {
      "description": "Set default values in case variable is unset:",
      "syntax": "echo ${variable:-default}"
    },
    {
      "description": "Return variable length in characters:",
      "syntax": "echo ${#variable}"
    },
    {
      "description": "Return a string slice:",
      "syntax": "echo ${variable:3:7}"
    },
    {
      "description": "Recursively expand a variable:",
      "syntax": "echo ${!variable}"
    },
    {
      "description": "Capitalize all the characters:",
      "syntax": "echo ${variable^^}"
    }
  ]
}