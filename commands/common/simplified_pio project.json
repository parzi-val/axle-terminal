{
  "command": "pio project",
  "description": "Manage PlatformIO projects. More information: https://docs.platformio.org/en/latest/core/userguide/project/.",
  "useCases": [
    {
      "description": "Initialize a new PlatformIO project:",
      "syntax": "pio project init"
    },
    {
      "description": "Initialize a new PlatformIO project in a specific directory:",
      "syntax": "pio project init --project-dir {{path/to/project_directory}}"
    },
    {
      "description": "Initialize a new PlatformIO project, specifying a board ID:",
      "syntax": "pio project init --board {{ATmega328P|uno|...}}"
    },
    {
      "description": "Initialize a new PlatformIO based project, specifying one or more project options:",
      "syntax": "pio project init --project-option=&quot;{{option}}={{value}}&quot; --project-option=&quot;{{option}}={{value}}&quot;"
    },
    {
      "description": "Print the configuration of a project:",
      "syntax": "pio project config"
    }
  ]
}