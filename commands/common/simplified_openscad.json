{
  "command": "openscad",
  "description": "Software for creating solid 3D CAD objects. More information: https://openscad.org.",
  "useCases": [
    {
      "description": "Open a file:",
      "syntax": "openscad {{path/to/button.scad}}"
    },
    {
      "description": "Convert a file to STL:",
      "syntax": "openscad -o {{path/to/button.stl}} {{path/to/button.scad}}"
    },
    {
      "description": "Render a file to PNG in a specific colorscheme:",
      "syntax": "openscad -o {{path/to/button.png}} --colorscheme {{Sunset}} {{path/to/button.scad}}"
    }
  ]
}