{
  "command": "docker-slim",
  "description": "Analyze and optimize Docker images. More information: https://github.com/slimtoolkit/slim.",
  "useCases": [
    {
      "description": "Start DockerSlim on interactive mode:",
      "syntax": "docker-slim"
    },
    {
      "description": "Analyze Docker layers from a specific image:",
      "syntax": "docker-slim xray --target {{image:tag}}"
    },
    {
      "description": "Lint a Dockerfile:",
      "syntax": "docker-slim lint --target {{path/to/Dockerfile}}"
    },
    {
      "description": "Analyze and generate an optimized Docker image:",
      "syntax": "docker-slim build {{image:tag}}"
    },
    {
      "description": "Display help for a subcommand:",
      "syntax": "docker-slim {{subcommand}} --help"
    }
  ]
}