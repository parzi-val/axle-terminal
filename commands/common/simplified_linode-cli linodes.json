{
  "command": "linode-cli linodes",
  "description": "Manage Linode instances. See also: linode-cli. More information: https://techdocs.akamai.com/cloud-computing/docs/cli-commands-for-compute-instances.",
  "useCases": [
    {
      "description": "List all Linodes:",
      "syntax": "linode-cli linodes list"
    },
    {
      "description": "Create a new Linode:",
      "syntax": "linode-cli linodes create --type {{linode_type}} --region {{region}} --image {{image_id}}"
    },
    {
      "description": "View details of a specific Linode:",
      "syntax": "linode-cli linodes view {{linode_id}}"
    },
    {
      "description": "Update settings for a Linode:",
      "syntax": "linode-cli linodes update {{linode_id}} --label {{[new_label}}"
    },
    {
      "description": "Delete a Linode:",
      "syntax": "linode-cli linodes delete {{linode_id}}"
    },
    {
      "description": "Perform a power management operation on a Linode:",
      "syntax": "linode-cli linodes {{boot|reboot|shutdown}} {{linode_id}}"
    },
    {
      "description": "List available backups for a Linode:",
      "syntax": "linode-cli linodes backups-list {{linode_id}}"
    },
    {
      "description": "Restore a backup to a Linode:",
      "syntax": "linode-cli linodes backups-restore {{linode_id}} --backup-id {{backup_id}}"
    }
  ]
}