{
  "command": "kubectl label",
  "description": "Label Kubernetes resources. More information: https://kubernetes.io/docs/reference/generated/kubectl/kubectl-commands#label.",
  "useCases": [
    {
      "description": "Label a pod:",
      "syntax": "kubectl label pod {{pod_name}} {{key}}={{value}}"
    },
    {
      "description": "Update a pod label by overwriting the existing value:",
      "syntax": "kubectl label --overwrite pod {{pod_name}} {{key}}={{value}}"
    },
    {
      "description": "Label all pods in the namespace:",
      "syntax": "kubectl label pods --all {{key}}={{value}}"
    },
    {
      "description": "Label a pod identified by the pod definition file:",
      "syntax": "kubectl label -f {{pod_definition_file}} {{key}}={{value}}"
    },
    {
      "description": "Remove the label from a pod:",
      "syntax": "kubectl label pod {{pod_name}} {{key}}-"
    }
  ]
}