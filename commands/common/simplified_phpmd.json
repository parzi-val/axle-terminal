{
  "command": "phpmd",
  "description": "PHP mess detector: check for common potential problems. More information: https://github.com/phpmd/phpmd.",
  "useCases": [
    {
      "description": "Display a list of available rulesets and formats:",
      "syntax": "phpmd"
    },
    {
      "description": "Scan a file or directory for problems using comma-separated rulesets:",
      "syntax": "phpmd {{path/to/file_or_directory}} {{xml|text|html}} {{ruleset1,ruleset2,...}}"
    },
    {
      "description": "Specify the minimum priority threshold for rules:",
      "syntax": "phpmd {{path/to/file_or_directory}} {{xml|text|html}} {{ruleset1,ruleset2,...}} --minimumpriority {{priority}}"
    },
    {
      "description": "Include only the specified extensions in analysis:",
      "syntax": "phpmd {{path/to/file_or_directory}} {{xml|text|html}} {{ruleset1,ruleset2,...}} --suffixes {{extensions}}"
    },
    {
      "description": "Exclude the specified comma-separated directories:",
      "syntax": "phpmd {{path/to/file_or_directory1,path/to/file_or_directory2,...}} {{xml|text|html}} {{ruleset1,ruleset2,...}} --exclude {{directory_patterns}}"
    },
    {
      "description": "Output the results to a file instead of stdout:",
      "syntax": "phpmd {{path/to/file_or_directory}} {{xml|text|html}} {{ruleset1,ruleset2,...}} --reportfile {{path/to/report_file}}"
    },
    {
      "description": "Ignore the use of warning-suppressive PHPDoc comments:",
      "syntax": "phpmd {{path/to/file_or_directory}} {{xml|text|html}} {{ruleset1,ruleset2,...}} --strict"
    }
  ]
}