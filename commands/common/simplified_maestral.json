{
  "command": "maestral",
  "description": "A lightweight Dropbox client for macOS and Linux. More information: https://maestral.app/cli.",
  "useCases": [
    {
      "description": "Start the GUI:",
      "syntax": "maestral gui"
    },
    {
      "description": "Print current status of Maestral:",
      "syntax": "maestral status"
    },
    {
      "description": "Pause syncing:",
      "syntax": "maestral pause"
    },
    {
      "description": "Resume syncing:",
      "syntax": "maestral resume"
    },
    {
      "description": "Print sync status of a specific file or folder:",
      "syntax": "maestral filestatus {{path/to/file_or_directory}}"
    }
  ]
}