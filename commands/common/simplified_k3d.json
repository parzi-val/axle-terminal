{
  "command": "k3d",
  "description": "A wrapper to easily create k3s clusters inside Docker. More information: https://k3d.io.",
  "useCases": [
    {
      "description": "Create a cluster:",
      "syntax": "k3d cluster create {{cluster_name}}"
    },
    {
      "description": "Delete a cluster:",
      "syntax": "k3d cluster delete {{cluster_name}}"
    },
    {
      "description": "Create a new containerized k3s node:",
      "syntax": "k3d node create {{node_name}}"
    },
    {
      "description": "Import an image from Docker into a k3d cluster:",
      "syntax": "k3d image import {{image_name}} --cluster {{cluster_name}}"
    },
    {
      "description": "Create a new registry:",
      "syntax": "k3d registry create {{registry_name}}"
    }
  ]
}