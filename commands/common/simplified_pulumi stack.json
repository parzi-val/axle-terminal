{
  "command": "pulumi stack",
  "description": "Manage stacks and view stack state. More information: https://www.pulumi.com/docs/iac/cli/commands/pulumi_stack/.",
  "useCases": [
    {
      "description": "Create a new stack:",
      "syntax": "pulumi stack init {{stack_name}}"
    },
    {
      "description": "View the stack state:",
      "syntax": "pulumi stack"
    },
    {
      "description": "List stacks in the current project:",
      "syntax": "pulumi stack ls"
    },
    {
      "description": "List stacks across all projects:",
      "syntax": "pulumi stack ls --all"
    },
    {
      "description": "Select an active stack:",
      "syntax": "pulumi stack select {{stack_name}}"
    },
    {
      "description": "Show stack outputs, including secrets, in plaintext:",
      "syntax": "pulumi stack output --show-secrets"
    },
    {
      "description": "Export the stack state to a JSON file:",
      "syntax": "pulumi stack export --file {{path/to/file.json}}"
    },
    {
      "description": "Display help:",
      "syntax": "pulumi stack --help"
    }
  ]
}