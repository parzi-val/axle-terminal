{
  "command": "heroku",
  "description": "Create and manage Heroku apps. More information: https://www.heroku.com/.",
  "useCases": [
    {
      "description": "Log in to your Heroku account:",
      "syntax": "heroku login"
    },
    {
      "description": "Create a Heroku app:",
      "syntax": "heroku create"
    },
    {
      "description": "Show logs for an app:",
      "syntax": "heroku logs --app {{app_name}}"
    },
    {
      "description": "Run a one-off process inside a dyno (Heroku virtual machine):",
      "syntax": "heroku run {{process_name}} --app {{app_name}}"
    },
    {
      "description": "List dynos (Heroku virtual machines) for an app:",
      "syntax": "heroku ps --app {{app_name}}"
    },
    {
      "description": "Permanently destroy an app:",
      "syntax": "heroku destroy --app {{app_name}}"
    }
  ]
}