{
  "command": "screen",
  "description": "Hold a session open on a remote server. Manage multiple windows with a single SSH connection. See also tmux and zellij. More information: https://manned.org/screen.",
  "useCases": [
    {
      "description": "Start a new screen session:",
      "syntax": "screen"
    },
    {
      "description": "Start a new named screen session:",
      "syntax": "screen -S {{session_name}}"
    },
    {
      "description": "Start a new daemon and log the output to screenlog.x:",
      "syntax": "screen -dmLS {{session_name}} {{command}}"
    },
    {
      "description": "Show open screen sessions:",
      "syntax": "screen -ls"
    },
    {
      "description": "Reattach to an open screen:",
      "syntax": "screen -r {{session_name}}"
    },
    {
      "description": "Detach from inside a screen:",
      "syntax": "&lt;Ctrl&gt; + A, D"
    },
    {
      "description": "Kill the current screen session:",
      "syntax": "&lt;Ctrl&gt; + A, K"
    },
    {
      "description": "Kill a detached screen:",
      "syntax": "screen -X -S {{session_name}} quit"
    }
  ]
}