{
  "command": "aws acm",
  "description": "AWS Certificate Manager. More information: https://awscli.amazonaws.com/v2/documentation/api/latest/reference/acm/index.html.",
  "useCases": [
    {
      "description": "Import a certificate:",
      "syntax": "aws acm import-certificate --certificate-arn {{certificate_arn}} --certificate {{certificate}} --private-key {{private_key}} --certificate-chain {{certificate_chain}}"
    },
    {
      "description": "List certificates:",
      "syntax": "aws acm list-certificates"
    },
    {
      "description": "Describe a certificate:",
      "syntax": "aws acm describe-certificate --certificate-arn {{certificate_arn}}"
    },
    {
      "description": "Request a certificate:",
      "syntax": "aws acm request-certificate --domain-name {{domain_name}} --validation-method {{validation_method}}"
    },
    {
      "description": "Delete a certificate:",
      "syntax": "aws acm delete-certificate --certificate-arn {{certificate_arn}}"
    },
    {
      "description": "List certificate validations:",
      "syntax": "aws acm list-certificates --certificate-statuses {{status}}"
    },
    {
      "description": "Get certificate details:",
      "syntax": "aws acm get-certificate --certificate-arn {{certificate_arn}}"
    },
    {
      "description": "Update certificate options:",
      "syntax": "aws acm update-certificate-options --certificate-arn {{certificate_arn}} --options {{options}}"
    }
  ]
}