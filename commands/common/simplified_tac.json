{
  "command": "tac",
  "description": "Display and concatenate files with lines in reversed order. See also: cat. More information: https://www.gnu.org/software/coreutils/manual/html_node/tac-invocation.html.",
  "useCases": [
    {
      "description": "Concatenate specific files in reversed order:",
      "syntax": "tac {{path/to/file1 path/to/file2 ...}}"
    },
    {
      "description": "Display stdin in reversed order:",
      "syntax": "{{cat path/to/file}} | tac"
    },
    {
      "description": "Use a specific [s]eparator:",
      "syntax": "tac -s {{separator}} {{path/to/file1 path/to/file2 ...}}"
    },
    {
      "description": "Use a specific [r]egex as a [s]eparator:",
      "syntax": "tac -r -s {{separator}} {{path/to/file1 path/to/file2 ...}}"
    },
    {
      "description": "Use a separator [b]efore each file:",
      "syntax": "tac -b {{path/to/file1 path/to/file2 ...}}"
    }
  ]
}