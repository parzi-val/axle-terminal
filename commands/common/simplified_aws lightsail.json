{
  "command": "aws lightsail",
  "description": "Manage Amazon Lightsail resources. More information: https://awscli.amazonaws.com/v2/documentation/api/latest/reference/lightsail/index.html.",
  "useCases": [
    {
      "description": "List all virtual private servers, or instances:",
      "syntax": "aws lightsail get-instances"
    },
    {
      "description": "List all bundles (instance plans):",
      "syntax": "aws lightsail list-bundles"
    },
    {
      "description": "List all available instance images, or blueprints:",
      "syntax": "aws lightsail list-blueprints"
    },
    {
      "description": "Create an instance:",
      "syntax": "aws lightsail create-instances --instance-names {{name}} --availability-zone {{region}} --bundle-id {{nano_2_0}} --blueprint-id {{blueprint_id}}"
    },
    {
      "description": "Print the state of a specific instance:",
      "syntax": "aws lightsail get-instance-state --instance-name {{name}}"
    },
    {
      "description": "Stop a specific instance:",
      "syntax": "aws lightsail stop-instance --instance-name {{name}}"
    },
    {
      "description": "Delete a specific instance:",
      "syntax": "aws lightsail delete-instance --instance-name {{name}}"
    }
  ]
}