{
  "command": "cypher-shell",
  "description": "Open an interactive session and run Cypher queries against a Neo4j instance. See also: neo4j-admin, mysql. More information: https://neo4j.com/docs/operations-manual/current/tools/cypher-shell/.",
  "useCases": [
    {
      "description": "Connect to a local instance on the default port (neo4j://localhost:7687):",
      "syntax": "cypher-shell"
    },
    {
      "description": "Connect to a remote instance:",
      "syntax": "cypher-shell --address neo4j://{{host}}:{{port}}"
    },
    {
      "description": "Connect and supply security credentials:",
      "syntax": "cypher-shell --username {{username}} --password {{password}}"
    },
    {
      "description": "Connect to a specific database:",
      "syntax": "cypher-shell --database {{database_name}}"
    },
    {
      "description": "Execute Cypher statements in a file and close:",
      "syntax": "cypher-shell --file {{path/to/file.cypher}}"
    },
    {
      "description": "Enable logging to a file:",
      "syntax": "cypher-shell --log {{path/to/file.log}}"
    },
    {
      "description": "Display help:",
      "syntax": "cypher-shell --help"
    }
  ]
}