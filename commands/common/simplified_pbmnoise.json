{
  "command": "pbmnoise",
  "description": "Generate white noise. More information: https://netpbm.sourceforge.net/doc/pbmnoise.html.",
  "useCases": [
    {
      "description": "Generate a PGM image containing white noise:",
      "syntax": "pbmnoise {{width}} {{height}} &gt; {{path/to/output.pbm}}"
    },
    {
      "description": "Specify the seed for the pseudo-random number generator:",
      "syntax": "pbmnoise {{width}} {{height}} -randomseed {{value}} &gt; {{path/to/output.pbm}}"
    },
    {
      "description": "Specify the desired rate of white to black pixels:",
      "syntax": "pbmnoise {{width}} {{height}} -ratio {{1/3}} &gt; {{path/to/output.pbm}}"
    }
  ]
}