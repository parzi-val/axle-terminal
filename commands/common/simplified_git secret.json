{
  "command": "git secret",
  "description": "Stores private data inside a Git repository. Written in Bash. More information: https://github.com/sobolevn/git-secret.",
  "useCases": [
    {
      "description": "Initialize git-secret in a local repository:",
      "syntax": "git secret init"
    },
    {
      "description": "Grant access to the current Git user's email:",
      "syntax": "git secret tell -m"
    },
    {
      "description": "Grant access by email:",
      "syntax": "git secret tell {{email}}"
    },
    {
      "description": "Revoke access by email:",
      "syntax": "git secret killperson {{email}}"
    },
    {
      "description": "List emails with access to secrets:",
      "syntax": "git secret whoknows"
    },
    {
      "description": "Register a secret file:",
      "syntax": "git secret add {{path/to/file}}"
    },
    {
      "description": "Encrypt secrets:",
      "syntax": "git secret hide"
    },
    {
      "description": "Decrypt secret files:",
      "syntax": "git secret reveal"
    }
  ]
}