{
  "command": "st-util",
  "description": "Run GDB (GNU Debugger) server to interact with STM32 ARM Cortex microcontoller. More information: https://github.com/texane/stlink.",
  "useCases": [
    {
      "description": "Run GDB server on port 4500:",
      "syntax": "st-util -p {{4500}}"
    },
    {
      "description": "Connect to GDB server:",
      "syntax": "(gdb) target extended-remote {{localhost}}:{{4500}}"
    },
    {
      "description": "Write firmware to device:",
      "syntax": "(gdb) load {{firmware.elf}}"
    }
  ]
}