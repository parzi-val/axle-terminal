{
  "command": "s3cmd",
  "description": "Command line tool and client for uploading, retrieving and managing data in S3 compatible object storage. More information: https://s3tools.org/s3cmd.",
  "useCases": [
    {
      "description": "Invoke configuration/reconfiguration tool:",
      "syntax": "s3cmd --configure"
    },
    {
      "description": "List Buckets/Folders/Objects:",
      "syntax": "s3cmd ls s3://{{bucket|path/to/file}}"
    },
    {
      "description": "Create Bucket/Folder:",
      "syntax": "s3cmd mb s3://{{bucket}}"
    },
    {
      "description": "Download a specific file from a bucket:",
      "syntax": "s3cmd get s3://{{bucket_name}}/{{path/to/file}} {{path/to/local_file}}"
    },
    {
      "description": "Upload a file to a bucket:",
      "syntax": "s3cmd put {{local_file}} s3://{{bucket}}/{{file}}"
    },
    {
      "description": "Move an object to a specific bucket location:",
      "syntax": "s3cmd mv s3://{{src_bucket}}/{{src_object}} s3://{{dst_bucket}}/{{dst_object}}"
    },
    {
      "description": "Delete a specific object:",
      "syntax": "s3cmd rm s3://{{bucket}}/{{object}}"
    }
  ]
}