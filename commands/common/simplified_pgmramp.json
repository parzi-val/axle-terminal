{
  "command": "pgmramp",
  "description": "Generate a greyscale map. More information: https://netpbm.sourceforge.net/doc/pgmramp.html.",
  "useCases": [
    {
      "description": "Generate a left-to-right greyscale map:",
      "syntax": "pgmtexture -lr &gt; {{path/to/output.pgm}}"
    },
    {
      "description": "Generate a top-to-bottom greyscale map:",
      "syntax": "pgmtexture -tb &gt; {{path/to/output.pgm}}"
    },
    {
      "description": "Generate a rectangular greyscale map:",
      "syntax": "pgmtexture -rectangle &gt; {{path/to/output.pgm}}"
    },
    {
      "description": "Generate a elliptical greyscale map:",
      "syntax": "pgmtexture -ellipse {{path/to/image.pgm}} &gt; {{path/to/output.pgm}}"
    },
    {
      "description": "Generate a greyscale map from the top-left corner to the bottom-right corner:",
      "syntax": "pgmtexture -diagonal {{path/to/image.pgm}} &gt; {{path/to/output.pgm}}"
    }
  ]
}