{
  "command": "tea",
  "description": "Interact with Gitea servers. More information: https://gitea.com/gitea/tea.",
  "useCases": [
    {
      "description": "Log into a Gitea server:",
      "syntax": "tea login add --name &quot;{{name}}&quot; --url &quot;{{url}}&quot; --token &quot;{{token}}&quot;"
    },
    {
      "description": "Display all repositories:",
      "syntax": "tea repos ls"
    },
    {
      "description": "Display a list of issues:",
      "syntax": "tea issues ls"
    },
    {
      "description": "Display a list of issues for a specific repository:",
      "syntax": "tea issues ls --repo &quot;{{repository}}&quot;"
    },
    {
      "description": "Create a new issue:",
      "syntax": "tea issues create --title &quot;{{title}}&quot; --body &quot;{{body}}&quot;"
    },
    {
      "description": "Display a list of open pull requests:",
      "syntax": "tea pulls ls"
    },
    {
      "description": "Open the current repository in a browser:",
      "syntax": "tea open"
    }
  ]
}