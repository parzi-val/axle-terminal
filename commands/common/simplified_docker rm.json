{
  "command": "docker rm",
  "description": "Remove containers. More information: https://docs.docker.com/reference/cli/docker/container/rm/.",
  "useCases": [
    {
      "description": "Remove containers:",
      "syntax": "docker rm {{container1 container2 ...}}"
    },
    {
      "description": "Force remove a container:",
      "syntax": "docker rm --force {{container1 container2 ...}}"
    },
    {
      "description": "Remove a container and its volumes:",
      "syntax": "docker rm --volumes {{container}}"
    },
    {
      "description": "Display help:",
      "syntax": "docker rm --help"
    }
  ]
}